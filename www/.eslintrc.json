{
  "env": {
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "globals": {
    "module": true,
    "require": true,
    "__dirname": true
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "plugins": [
    "unused-imports",
    "html",
    "php-markup"
  ],
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 120
      }
    ],
    "eqeqeq": "warn",
    "semi-spacing": [
      "warn",
      {
        "before": false,
        "after": true
      }
    ],
    "import/order": [
      "warn",
      {
        "newlines-between": "never"
      }
    ],
    "object-curly-spacing": [
      "warn",
      "always"
    ],
    "comma-dangle": [
      "warn",
      "never"
    ],
    "semi": [
      "warn",
      "always"
    ],
    "quotes": [
      "warn",
      "double"
    ],
    "no-multiple-empty-lines": [
      "warn",
      {
        "max": 1,
        "maxBOF": 0,
        "maxEOF": 1
      }
    ],
    "no-console": "warn",
    "no-debugger": "warn",
    "no-implicit-globals": "warn",
    "no-global-assign": "warn",
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "import/no-unresolved": [
      "warn",
      {
        "ignore": [
          "^esig"
        ]
      }
    ]
  }
}
