{
    "env": {
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "prettier"
    ],
    "globals": {
        "module": true,
        "require": true,
        "__dirname": true
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    },
    "plugins": [
      "unused-imports",
      "html"
    ]
}
